@model Book

@{
    ViewData["Title"] = "Delete Book";
}

<h1>Delete Book</h1>

<h3>Are you sure you want to delete this Book?</h3>
<div>
    <table>
        <tr>
            <td>
                <img src="@Model.CoverImage" width="150px">
            </td>
            <td>
                <h3 class="book-header">@Model.Title</h3>
                <p>ISBN: @Model.Id</p>
                <span>
                    <strong>Authors</strong>
                    <ul class="author-list">
                        @foreach (string author in Model.Authors)
                        {
                            <li>@author</li>
                        }
                    </ul>
                </span>

                <p>Publication Year: @Model.PublicationYear</p>
                <p>Genre: @Model.Genre</p>
            </td>
        </tr>
    </table>

    <form asp-action="Delete">
        <input type="hidden" asp-id="@Model.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
